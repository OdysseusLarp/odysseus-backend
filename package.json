    "rewire": "^4.0.1",
    "sinon": "^6.1.5"
  },
  "babel": {
    "sourceMaps": "inline",
    "presets": [
      "stage-0"
    ],
    "plugins": [
      "babel-plugin-syntax-decorators",
      "babel-plugin-transform-strict-mode",
      "babel-plugin-transform-es2015-modules-commonjs",
      "babel-plugin-transform-object-rest-spread"
    ],
    "env": {
      "test": {
        "plugins": [
          "rewire",
          "istanbul"
        ]
      }
    }
  },
  "signale": {
    "displayTimestamp": true,
    "displayFilename": true
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "ava": {
    "concurrency": 4,
    "files": [
      "test/**/*.js"
    ],
    "source": [
      "src/**/*.js"
    ],
    "babel": "inherit",
    "require": [
      "babel-register"
    ]
  }
